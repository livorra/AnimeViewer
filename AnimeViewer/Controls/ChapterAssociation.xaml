<UserControl x:Class="AnimeViewer.Controls.ChapterAssociation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="chapterAssociation"
             mc:Ignorable="d" Height="606" Width="815">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,23,0,0" TextWrapping="Wrap" Text="{Binding ElementName=chapterAssociation,Path=Serie.Name}" VerticalAlignment="Top" Height="55" Foreground="{DynamicResource LabelForegroundDecription}" FontSize="36"/>
        <ListView Margin="10,83,10,122" SizeChanged="DGassociation_SizeChanged" ItemsSource="{Binding ElementName=chapterAssociation,Path=ChapterAssociationEntities}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Official name" Width="500">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding OfficialChapter}" x:Name="BchangeName"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="File name" Width="auto" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Button" HorizontalAlignment="Left" Margin="32,43,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</UserControl>
