<UserControl x:Class="AnimeViewer.Controls.RightPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="rightPanel"
             mc:Ignorable="d" Height="514" Width="296">
    <Grid>
        <ListBox Margin="10,41,10,10" SelectedItem="{Binding ElementName=rightPanel,Path=SelectedChapter}" ItemsSource="{Binding ElementName=rightPanel , Path=Serie.Chapters}" DisplayMemberPath="Name" />
        <Label Content="Chapters" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="{DynamicResource LabelForegroundDecription}" />

    </Grid>
</UserControl>
